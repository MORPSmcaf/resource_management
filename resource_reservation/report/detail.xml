<odoo>
    <data>
        <!-- Report template for ResourceDetail -->
        <template id="report_resource_reservation_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Resource Reservation Report</h2>
                        <table class="table table-condensed">
                            <tr>
                                <td><strong>Title:</strong></td>
                                <td><span t-field="doc.title"/></td>
                            </tr>
                            <tr>
                                <td><strong>Resource Name:</strong></td>
                                <td><span t-field="doc.name.name"/></td>
                            </tr>
                            <tr>
                                <td><strong>Start Date AND Time:</strong></td>
                                <td><span t-field="doc.start_datetime"/></td>
                            </tr>
                            <tr>
                                <td><strong>End Date AND Time:</strong></td>
                                <td><span t-field="doc.end_datetime"/></td>
                            </tr>
                            <tr>
                                <td><strong>Creator:</strong></td>
                                <td><span t-field="doc.creator"/></td>
                            </tr>
                            <tr>
                                <td><strong>Booking Status:</strong></td>
                                <td><span t-field="doc.booking_status"/></td>
                            </tr>
                            <tr>
                                <td><strong>Reservation Description:</strong></td>
                                <td><span t-field="doc.resource_description"/></td>
                            </tr>
                            <tr>
                                <td><strong>Reservation Tag:</strong></td>
                                <td><span t-field="doc.reservation_tag_id.name"/></td>
                            </tr>
                        </table>
                    </div>
                    </t>
                </t>
            </t>
        </template>


        <record id="report_resource_reservation_temp" model="ir.actions.report">
            <field name="name">Resource Reservation Report</field>
            <field name="model">resource.reservation</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">resource_reservation.report_resource_reservation_template</field>
            <field name="report_file">resource_reservation.report_resource_reservation_template</field>
            <field name="binding_model_id" ref="model_resource_reservation"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
