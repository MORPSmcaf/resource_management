<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_resource_detail_tree" model="ir.ui.view">
        <field name="name">resource.detail.tree</field>
        <field name="model">resource.detail</field>
        <field name="arch" type="xml">
            <tree name="Resource detail" create="false">
                <field name="name" width="6"/>
                <field name="resource_type" width="6"/>
                <field name="resource_capacity" width="6"/>
                <field name="resource_owner" width="6"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_resource_detail_form">
        <field name="name">resource.detail.form</field>
        <field name="model">resource.detail</field>
        <field name="arch" type="xml">
            <form name="Resource Detail">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="resource_type" required="1"/>
                            <field name="resource_capacity" required="1"/>
                            <field name="resource_owner" required="1"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" filename="name"/>
                        </group>
                        <notebook>
                            <page string="Confirmed Reservations">
                                <field name="confirmed_reservations" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="booking_status"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Cancelled Reservations">
                                <field name="cancelled_reservations" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="booking_status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_resource_type_tree" model="ir.ui.view">
        <field name="name">resource.type.tree</field>
        <field name="model">resource.type</field>
        <field name="arch" type="xml">
            <tree name="Resource Types" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_resource_type_form" model="ir.ui.view">
        <field name="name">resource.type.form</field>
        <field name="model">resource.type</field>
        <field name="arch" type="xml">
            <form string="Resource Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_resource_type_act_window" model="ir.actions.act_window">
        <field name="name">Resource Type</field>
        <field name="res_model">resource.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_resource_detail_act_window"
            model="ir.actions.act_window">
        <field name="name">Resource Detail</field>
        <field name="res_model">resource.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_resource_detail_btn_act_window"
            model="ir.actions.act_window">
        <field name="name">Resource Detail btn</field>
        <field name="res_model">resource.detail</field>
        <field name="view_mode">form</field>
    </record>
</odoo>


