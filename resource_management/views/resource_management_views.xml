<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Define the view for the Resource Management model -->
        <record id="view_resource_management_form" model="ir.ui.view">
            <field name="name">resource.management.form</field>
            <field name="model">resource.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <!-- Title Field -->
                        <group>
                            <group>
                                <field name="title" class="oe_inline"/>
                                <field name="booking_status"/>
                            </group>
                        </group>

                        <!-- Resource Name Field -->
                        <group>
                            <field name="name"/>
                        </group>

                        <!-- Start Date & Time and End Date & Time Fields -->
                        <group>
                            <group>
                                <field name="start_datetime" class="oe_inline"/>
                                <field name="end_datetime"/>
                            </group>
                        </group>

                        <!-- Created By Field -->
                        <group>
                            <field name="creator"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Define the tree view for the Resource Management model -->
        <record id="view_resource_management_tree" model="ir.ui.view">
            <field name="name">resource.management.tree</field>
            <field name="model">resource.management</field>
            <field name="arch" type="xml">
                <tree string="Resource Management">
                    <field name="title" width="4"/>
                    <field name="name" width="4"/>
                    <field name="start_datetime" width="4"/>
                    <field name="end_datetime" width="4"/>
                    <field name="booking_status" width="4"/>
                </tree>
            </field>
        </record>


        <!-- Define an action to open the tree view and form view-->
        <record id="action_resource_management" model="ir.actions.act_window">
            <field name="name">Resource Management</field>
            <field name="res_model">resource.management</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_root" name="Resource Management"/>

        <menuitem id="menu_resource_management" name="Resource Management" parent="menu_root"
                  action="action_resource_management"/>


    </data>
</odoo>


